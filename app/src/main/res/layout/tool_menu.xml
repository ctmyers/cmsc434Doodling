<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/toolsBackground"
    android:padding="15dp">

    <TextView
        android:text="Selected Color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_dark" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/selectedColorTextView"
        android:background="@color/colorPrimary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <TextView
        android:text="Colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redButton"
            android:background="@android:color/holo_red_dark"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orangeButton"
            android:background="@android:color/holo_orange_dark"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellowButton"
            android:background="@android:color/holo_orange_light"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greenButton"
            android:background="@color/colorPrimary"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="5dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purpleButton"
            android:background="@android:color/holo_purple"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackButton"
            android:background="@android:color/background_dark"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whiteButton"
            android:background="@android:color/background_light"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grayButton"
            android:background="@android:color/darker_gray"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blueButton"
            android:background="@android:color/holo_blue_dark"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_margin="5dp" />

    </GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:text="Stroke Size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/background_dark"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/strokeSizeSeekBar"
        android:progressBackgroundTint="@android:color/black"
        android:progressTint="@color/colorPrimary"
        android:thumbTint="@color/colorPrimary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:text="Opacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/opacitySeekBar"
        android:progressBackgroundTint="@android:color/black"
        android:progressTint="@color/colorPrimary"
        android:thumbTint="@color/colorPrimary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>